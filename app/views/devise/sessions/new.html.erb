
<h3>Log in</h3>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email,:class => 'form-check-label' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" ,:class => 'form-control w-25'%>
  </div>

  <div class="field">
    <%= f.label :password,:class => 'form-check-label' %><br />
    <%= f.password_field :password, autocomplete: "current-password",:class => 'form-control w-25'%>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me,:class => 'form-control w-25' %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions mt-2">
    <%= f.submit "Log in" , :class => 'btn btn-warning mt-2'%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
